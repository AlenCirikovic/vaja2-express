<% layout('layout', { title: question.title }) %>

<h2><%= question.title %></h2>
<p><%= question.description %></p>
<p>Objavil: <%= question.author.username %> | <%= question.createdAt.toLocaleString() %></p>

<% if (acceptedAnswer) { %>
  <h3>Sprejet odgovor</h3>
  <p><%= acceptedAnswer.content %> — <%= acceptedAnswer.author.username %></p>
<% } %>

<h3>Odgovori</h3>
<ul>
  <% answers.forEach(a => { %>
    <% if (!acceptedAnswer || a._id.toString() !== acceptedAnswer._id.toString()) { %>
      <li>
        <p><%= a.content %></p>
        <small>— <%= a.author.username %> ob <%= a.createdAt.toLocaleString() %></small>
        <% if (user && user._id.toString() === question.author._id.toString()) { %>
          <form method="POST" action="/questions/<%= question._id %>/accept">
            <input type="hidden" name="answerId" value="<%= a._id %>">
            <button type="submit">Sprejmi ta odgovor</button>
          </form>
        <% } %>
      </li>
    <% } %>
  <% }) %>
</ul>

<% if (user) { %>
  <h3>Dodaj svoj odgovor</h3>
  <form method="POST" action="/answers">
    <textarea name="content" required></textarea>
    <input type="hidden" name="questionId" value="<%= question._id %>">
    <button type="submit">Oddaj</button>
  </form>
<% } %>
